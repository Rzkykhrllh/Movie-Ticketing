<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="360dp"
    android:background="@drawable/shape_rectangle_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/pop_qr"
        android:layout_width="187dp"
        android:layout_height="187dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/qrcode"/>

    <TextView
        android:id="@+id/pop_teks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan lakukan scanning pada\ncounter tiket terdekat"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/pop_qr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pop_tutup"
        />

    <Button
        android:id="@+id/pop_tutup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="TUTUP"
        android:layout_marginBottom="10dp"
        android:textColor="@color/putih"
        android:background="@drawable/shape_rectangle_blue_bg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>